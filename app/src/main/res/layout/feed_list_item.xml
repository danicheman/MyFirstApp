<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/feed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:gravity="top"
        android:layout_margin="10dp"
        android:text="This is an example Feed"
        />

    <TextView
        android:id="@+id/feed_description"
        android:layout_width="0sp"
        android:layout_height="26dip"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/feed_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="This company does this kind of story"
        android:textSize="12sp" />
    <ImageButton
        android:id="@+id/remove_feed"
        android:layout_width="@dimen/width_button"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:contentDescription=""
        android:onClick="deleteFeed"
        android:src="@android:drawable/ic_delete" />
</RelativeLayout>
